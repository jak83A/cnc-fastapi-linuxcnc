# LinuxCNC Configuration
LINUXCNC_PATH=/usr/lib/python3/dist-packages
HAL_CONFIG_FILE=config/mesa7i92-zero3.hal

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_TITLE=CNC Control API
API_VERSION=1.0.0

# Logging
LOG_LEVEL=INFO

# CNC Settings
DEFAULT_FEED_RATE=1000.0
MAX_FEED_RATE=10000.0
POLL_INTERVAL=0.05

# Safety
REQUIRE_HOMING=true
ENABLE_SOFT_LIMITS=true
